
<div id="myCarousel" class="carousel slide" data-ride="carousel" style="background-color: #4F4F4F">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= link_to image_tag("truyendong/1.jpg", class: "owl"),root_path %>
    </div>
    <div class="item">
      <%= link_to image_tag("truyendong/2.jpg", class: "owl"),root_path %>
    </div>
    <div class="item">
      <%= link_to image_tag("truyendong/3.jpg", class: "owl"),root_path %>
    </div>
    
  </div>
</div>